<HomeScreen>

    PBoxLayout:
        orientation: "vertical"

        PBoxLayout:
            padding: [dp(25), dp(30), dp(5), dp(0)]
            adaptive_height: True

            PLabel:
                text: "Chats"
                font_size: sp(40)
                font_name: "LexendMedium"
                adaptive_height: True
                text_size: self.width, None

            PIconButton:
                icon: "more-vertical"
                mode: "unstyled"
                font_size: sp(30)
                on_release: root.show_menu()

        PBoxLayout:
            id: labelcase
            padding: [dp(25), dp(5), dp(5), dp(10)]
            adaptive_height: True

            PLabel:
                id: first
                opacity: 0
                text: "Create a chat first"
                font_size: sp(14)
                font_name: "LexendMedium"
                adaptive_height: True
                text_size: self.width, None

        RecycleView:
            data: root.chats
            viewclass: "ChatListItem"

            RecycleBoxLayout:
                padding: dp(10)
                spacing: dp(10)
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_size[1]
                default_size_hint: 1, None
                default_size: None, None

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        padding: dp(20)

        PIconButton:
            icon: "plus"
            on_release:
                root.create()


<MenuDialogContent>
    orientation: "vertical"
    adaptive_height: True
    padding: dp(15)
    spacing: dp(10)

    ListItem:
        text: "Account"
        secondary_text: "Account details"
        icon: "user"

    ListItem:
        text: "Settings"
        secondary_text: "App preferences"
        icon: "tool"
        on_release:
            root.parent.parent.dismiss()
            app.root.set_current("settings")

    ListItem:
        text: "Other"
        secondary_text: "Others...."
        icon: "more-horizontal"

<CreatePopup>
    id: yea
    adaptive_height: True
    padding: dp(20)
    spacing: dp(10)
    orientation: "vertical"

    PLabel:
        text: "New"
        font_size: dp(20)
        font_name: "LexendMedium"
        adaptive_height: True

    PLabel:
        text: "Enter in your recipient to start a new chat."
        text_size: self.width, None
        halign: "center"
        adaptive_height: True

    PBoxLayout:
        orientation: "vertical"
        adaptive_height: True
        spacing: dp(15)
        pos_hint: {"center_x": .5, "center_y": .4}

        PTextField:
            id: recipient
            text: ""
            hint_text: "Recipient"
            size_hint: .7, None
            height: dp(40)
            pos_hint: {"center_x": .5}

            translate_x: 0
            translate_y: 0
            scale_x: 1
            scale_y: 1
            rotate: 0

            canvas.before:
                PushMatrix
                Translate:
                    x: self.translate_x or 0
                    y: self.translate_y or 0

                Rotate:
                    origin: self.center
                    angle: self.rotate or 0

                Scale:
                    origin: self.center
                    x: self.scale_x or 1
                    y: self.scale_y or 1
            canvas.after:
                PopMatrix


        Widget:
            size_hint_y: None
            height: dp(25)

        PBoxLayout:
            adaptive_size: True
            pos_hint: {"center_x": .5}
            spacing: dp(10)

            PButton:
                text: "Create"
                on_release:
                    app.create_chat(recipient.text)

<UserInfoDialogContent>
    orientation: "vertical"
    adaptive_height: True
    padding: dp(10)
    spacing: dp(10)

    FitImage:
        source: root.image
        radius: [dp(10),]
        size_hint: None, None
        size: dp(140), dp(140)
        pos_hint: {"center_x": .5}

    PLabel:
        text: root.title
        halign: "center"
        font_name: "LexendMedium"
        adaptive_height: True
        font_size: sp(30)

    PLabel:
        text: root.about
        halign: "center"
        font_name: "LexendLight"
        font_size: sp(16)
        adaptive_height: True
        text_size: self.width, None

    PButton:
        text: "Delete"
        on_release:
            app.delete_user(root.title)