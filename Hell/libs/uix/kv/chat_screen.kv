<ChatScreen>

    PBoxLayout:
        orientation: "vertical"

        PToolbar:
            title: root.title
            left_action_items: [["arrow-left", lambda x: root.manager.goto_previous_screen()]]
            on_title_press: root.show_user_info()

        RecycleView:
            id: chat_rv
            data: root.chat_logs
            viewclass: "ChatBubble"

            RecycleBoxLayout:
                id: box
                padding: dp(10)
                spacing: dp(15)
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_size[1]
                default_size_hint: .8, None
                default_size: None, None
        PBoxLayout:
            md_bg_color: 245/255, 245/255, 245/255, 1
            size_hint_y: .11
            PBoxLayout:
                size_hint: .7, .60
                pos_hint: {"center_x": .45, "center_y": .5}
                canvas:
                    Color:
                        rgb: (238/255, 238/255, 238/255, 1)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [23, 23, 23, 23]

                TextInput:
                    id: field
                    hint_text: "Type something..."
                    size_hint: 1, None
                    pos_hint: {"center_x": .5, "center_y": .5}
                    font_size: "12sp"
                    height: self.minimum_height
                    multiline: False
                    cursor_color: 1, 170/255, 23/255, 1
                    cursor_width: "2sp"
                    foreground_color: "34218e"
                    background_color: 0, 0, 0, 0
                    padding: 15
                    font_name: "Lexend"

    PIconButton:
        icon: "corner-right-up"
        font_size: sp(35)
        pos_hint: {"center_x": .9}
        y: dp(55)-(self.width/2)
        on_release: root.send(field.text.strip())

    PIconButton:
        icon: "chevrons-down"
        font_size: sp(20)
        mode: "outlined"
        pos_hint: {"center_x": .9}
        y: dp(55)+(self.width)
        opacity: 1 if self.show else 0
        disabled: False if self.show else True
        on_release: root.scroll_to_bottom() 
        show:
            True if chat_rv.height < box.height and chat_rv.scroll_y > 0 \
            else False


<UserInfoDialogContent>
    orientation: "vertical"
    adaptive_height: True
    padding: dp(10)
    spacing: dp(10)

    FitImage:
        source: root.image
        radius: [dp(10),]
        size_hint: None, None
        size: dp(140), dp(140)
        pos_hint: {"center_x": .5}

    PLabel:
        text: root.title
        halign: "center"
        font_name: "LexendMedium"
        adaptive_height: True
        font_size: sp(30)

    PLabel:
        text: root.about
        halign: "center"
        font_name: "LexendLight"
        font_size: sp(16)
        adaptive_height: True
        text_size: self.width, None
